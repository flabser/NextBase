<?xml version="1.0" encoding="utf-8"?>
<rule type="page" id="bank_account" mode="on" history="on">
	<description>Справочник Расчетный счет</description>
	<caching>NO_CACHING</caching>
	<xsltfile>pages/glossary.xsl</xsltfile>
	<element mode="ON" type="INCLUDED_PAGE">
		<name>outline</name>
		<value>outline</value>
	</element>
	<element mode="ON" type="SCRIPT">
		<name>action_bar</name>
		<events>
			<doscript source="file">bankfinance.page.actionbar.BankAccount</doscript>
		</events>
	</element>
	<element mode="ON" type="QUERY">
		<name>view_content</name>
		<query source="static">form = 'bank_account'</query>
		<doctype>glossary</doctype>
	</element>
	<caption name="category" source="KEYWORD">Справочник</caption>
	<caption name="viewnamecaption" source="KEYWORD">Расчетный счет</caption>
	<caption name="viewtext1" source="KEYWORD">Наименование</caption>
</rule>
