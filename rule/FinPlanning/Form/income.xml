<?xml version="1.0" encoding="UTF-8"?>
<rule type="form" id="income" mode="on">
	<description>Поступления</description>
	<xsltfile>forms/operations.xsl</xsltfile>
	<doctype>main</doctype>
	<events>
		<queryopen source="file">finplanning.form.income.QueryOpen</queryopen>
		<querysave source="file">finplanning.form.income.QuerySave</querysave>
	</events>
	<glossary mode="on" id="typeoperation" source="static">
		<description>Тип операции</description>
		<value><![CDATA[
			<entry><skey>in</skey><name>Приход</name></entry>
			<entry><skey>out</skey><name>Расход</name></entry>
			<entry><skey>transfer</skey><name>Перевод</name></entry>
			<entry><skey>calcstaff</skey><name>Расчет с персоналом</name></entry>
			<entry><skey>received</skey><name>Получение</name></entry>
			<entry><skey>withdraw</skey><name>withdraw</name></entry>
			<entry><skey>getcash</skey><name>getcash</name></entry>]]>
		</value>
	</glossary>
	<glossary mode="on" id="repeat" source="static">
		<description>Периодичность возникновения</description>
		<value><![CDATA[
			<entry><skey>once-only</skey><name>Разово</name></entry>
			<entry><skey>end-week</skey><name>В конце недели</name></entry>
			<entry><skey>end-month</skey><name>В конце месяца</name></entry>
			<entry><skey>end-quarter</skey><name>В конце квартала</name></entry>
			<entry><skey>end-year</skey><name>В конце года</name></entry>]]>
		</value>
	</glossary>
	<element mode="ON" type="INCLUDED_PAGE">
		<value>shared-form-vocabulary</value>
	</element>
	<caption name="date" source="KEYWORD">Event date/start of a period</caption>
	<caption name="cash" source="KEYWORD">Cash</caption>
	<caption name="category" source="KEYWORD">Type of the operation</caption>
	<caption name="subcategory" source="KEYWORD">Subtype of the operation</caption>
	<caption name="recipient" source="KEYWORD">Receiver or sender</caption>
	<caption name="typeoperation" source="KEYWORD">Type of the operation</caption>
	<caption name="targetcash" source="KEYWORD">Target cash</caption>
	<caption name="summa" source="KEYWORD">Sum</caption>
	<caption name="month" source="KEYWORD">Month</caption>
	<caption name="costcenter" source="KEYWORD">Place of the event</caption>
	<caption name="repeat" source="KEYWORD">Periodicity of the events</caption>
	<caption name="basis" source="KEYWORD">Base</caption>
	<caption name="through" source="KEYWORD">Via</caption>
	<caption name="documented" source="KEYWORD">Validated with document</caption>
</rule>
