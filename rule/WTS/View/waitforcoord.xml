	</column>
	<column>
		<caption id="updates" source="KEYWORD">Обновлено</caption>
	</column>
	<column>
		<caption id="from" source="KEYWORD">из</caption>
	</column>
	<column>
		<caption id="viewtext1" source="KEYWORD">Получатели</caption>
	</column>	
	<column>
