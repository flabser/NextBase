<?xml version="1.0" encoding="windows-1251"?>
<rule type="view" id="group" history="on">
    <description></description>
    <outline>navigator</outline>
    <query>group</query>		
   <xsltfile>views\glossary-view.xsl</xsltfile>	
    <field mode="on">
		<description></description>
		<name>newDocURL</name>
		<value><![CDATA[Provider?type=document&amp;id=group&amp;key=]]></value>
	</field>	
    <column>
        <caption id="category" source="KEYWORD">Справочники</caption>
    </column>
    <column>
        <caption id="view" source="KEYWORD">Группы пользователей</caption>
    </column>
    <column>
        <caption id="viewtext1" source="KEYWORD">Название</caption>
    </column>	
    <column>
        <caption id="page" source="KEYWORD">Страница</caption>
    </column>
    <column>
        <caption id="documents" source="KEYWORD">Документов</caption>
    </column>
    <column>
        <caption id="updates" source="KEYWORD">Обновлено</caption>
    </column>
    <column>
        <caption id="from" source="KEYWORD">из</caption>
    </column>
    <column>
		<caption id="btnNewDocument" source="KEYWORD">Добавить</caption>
	</column>
	<column>
		<caption id="btnDelete" source="KEYWORD">Удалить</caption>
	</column>
	<column>
		<caption id="helpcaption" source="KEYWORD">Помощь</caption>
	</column>
	<column>
		<caption id="appcaption" source="KEYWORD">Автоматизированная веб-система технического надзора (WTS)</caption>
	</column>
	<column>
		<caption id="curuserprop" source="KEYWORD">Посмотреть свойства текущего пользователя</caption>
	</column>
	<action mode="on" type="NEW_DOCUMENT">
		<caption source="KEYWORD">Новая группа</caption>
		<granted source="script" mode="on"><![CDATA[
				String[] getStringValue(_Session session){
					def user = session.getStructure().getUser(session.getCurrentUser());
					return getAsArray(user.hasRole(["chancellery", "administrator"]) ? user.getUserID() : "");
				}
				]]>
			</granted>
			
	</action>
	<action mode="off" type="DELETE_GLOSSARY">
		<caption source="KEYWORD">Удалить</caption>
		<granted source="script" mode="on"><![CDATA[
				String[] getStringValue(_Session session){
					def user = session.getStructure().getUser(session.getCurrentUser());
					return getAsArray(user.hasRole(["chancellery", "administrator"]) ? user.getUserID() : "");
				}
				]]>
			</granted>
			
	</action>
</rule>